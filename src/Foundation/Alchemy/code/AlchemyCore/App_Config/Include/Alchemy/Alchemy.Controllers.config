<configuration xmlns:role="http://www.sitecore.net/xmlconfig/role/" xmlns:patch="http://www.sitecore.net/xmlconfig/"
               xmlns:set="http://www.sitecore.net/xmlconfig/set/">
    <sitecore role:require="Standalone OR ContentDelivery OR ContentManagement OR Processing">
        <api>
            <services>
                <configuration
                    type="Sitecore.Services.Infrastructure.Configuration.ServicesConfiguration, Sitecore.Services.Infrastructure">
                    <allowedControllers hint="list:AddController">
                        <allowedController desc="AlchemyController">Sitecore.Foundation.Alchemy.Controller.API.AlchemyApiController, Sitecore.Foundation.Alchemy</allowedController>
                    </allowedControllers>
                </configuration>
            </services>
        </api>
    </sitecore>
</configuration>